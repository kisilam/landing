@function fade($c) {
	@return linear-gradient($c, rgba($c, 0) 80%);
}

div {
	/* relevant styles */
	border: solid .125em;
	border-image: fade(#be4c39) 1;
	padding: .125em;
	background: fade(#e18728) content-box;
	
	/* other styles */
	margin: 0 auto;
	width: 5em; height: 3em;
	color: white;
	font: 700 2em/2 comic sans ms, verdana, sans serif;
	text-align: center;
}